{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "imports": {
    "dnt": "https://deno.land/x/dnt@0.33.1/mod.ts",
    "uuid-v4": "https://deno.land/std@0.180.0/uuid/v4.ts",
    "deno-dom": "https://deno.land/x/deno_dom@v0.1.36-alpha/deno-dom-wasm.ts",
    "@ooneex/testing/": "https://deno.land/std@0.182.0/testing/"
  },
  "tasks": {
    "start": "deno run -A --watch=.env,.env.local,config/,controllers/,middlewares/ index.ts",
    "test:watch": "deno test -A --watch",
    "fmt": "deno fmt",
    "lint": "deno fmt --check && deno lint"
  }
}
